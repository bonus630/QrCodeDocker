<UserControl x:Class="br.corp.bonus630.plugin.LogoDesigner.LogoDesignerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:br.corp.bonus630.plugin.LogoDesigner"
             Width="280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Name="btn_draw" Content="{Binding Lang.BTN_Draw}" Click="btn_draw_Click" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Grid.Column="0" Name="btn_browser"  Content="{Binding Lang.BTN_Browser}" Click="btn_browser_Click" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="0" Name="btn_useSelection"  Content="{Binding Lang.BTN_UseSelection}" Click="btn_useSelection_Click" VerticalAlignment="Center"/>
        <Button Grid.Row="3" Grid.Column="0" Name="btn_reset"  Content="{Binding Lang.BTN_Reset}" Click="btn_reset_Click" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
