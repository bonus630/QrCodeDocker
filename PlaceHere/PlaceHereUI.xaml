<UserControl x:Class="br.corp.bonus630.plugin.PlaceHere.PlaceHereUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:br.corp.bonus630.plugin.PlaceHere"
            Width="280">

    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Lang.LBA_ObjOrigin}"/>
            <local:AnchorButton Width="30" Height="30" FactorChanged="AnchorButton_FactorChanged" x:Name="anchorButton"></local:AnchorButton>
            <CheckBox Content="{Binding Lang.CB_GetContainer}" Margin="20,0,0,0" x:Name="ck_getContainer" VerticalAlignment="Center" Click="ck_getContainer_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button x:Name="btn_start" Content="{Binding Lang.BTN_Start}" Height="30" Margin="0,0,20,0" Click="btn_start_Click"/>
            <Button x:Name="btn_continue" Content="{Binding Lang.BTN_Continue}" Height="30" Margin="20,0,20,0" Click="btn_continue_Click"/>
        </StackPanel>
    </StackPanel>

</UserControl>
