                                        <Setter Property="Fill" TargetName="ArrowLeft" Value="Black"/>
                                    </MultiDataTrigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Fill" TargetName="ArrowLeft" Value="#FFBFBFBF"/>
                                        <Setter Property="Fill" TargetName="ArrowRight" Value="#FFBFBFBF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="30">
            <RadioButton x:Name="cb_vector" Content="{Binding Lang.CB_Vector,FallbackValue=vector}" IsChecked="True" Margin="120,5,84,10"  />
            <RadioButton x:Name="cb_bitmap" Content="{Binding Lang.CB_Bitmap,FallbackValue=bitmap}" Margin="198,5,10,10" />
            <Label Content="{Binding Lang.LBA_QR_Format,FallbackValue=qrFormat}" Margin="0,0,188,0"  />
        </Grid>

        <Grid Grid.Row="1"  MinWidth="280" Visibility="{Binding ElementName=scrollViewer_buttons,Path=Visibility}">
            <GroupBox Header="{Binding Lang.GBH_FirstLineTpl,FallbackValue=ModeloDaPrimeiraLinha}">
                <GroupBox.ToolTip>
                    <Label Content="{Binding Lang.ToolTip_GBH_FirstLineTpl}"/>
                </GroupBox.ToolTip>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" CanContentScroll="True" VerticalScrollBarVisibility="Disabled" Visibility="Collapsed" Name="scrollViewer_buttons" HorizontalAlignment="Left"  Template="{DynamicResource ScrollViewerControlTemplateTiny}">
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Name="stackPanel_buttons"  Margin="2,2,2,2" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    </ScrollViewer>
                    <CheckBox Grid.Row="1" x:Name="ck_ignoreFirstLine" Content="{Binding Lang.CK_IgnoreFirstLine}" VerticalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked" IsChecked="{Binding IgnoreFirstLine}"/>
                </Grid>
            </GroupBox>


        </Grid>

        <Grid  Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="{Binding Lang.GBH_Enumaration}" Grid.Column="0" Margin="5,10,0,0" HorizontalAlignment="Left"  Height="146" VerticalAlignment="Top" >
                <Grid Margin="2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>


                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Name="btn_enumerator" Content="{Binding Lang.BTN_Enumerator,FallbackValue=Enumarator}" HorizontalAlignment="Center"  VerticalAlignment="Center" MinWidth="120" Click="Button_Click"/>
                    <Grid Grid.Row="1" Name="grid_enumerator" Margin="2,0,2,0" HorizontalAlignment="Left" Width="131"  VerticalAlignment="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>

                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0"  Content="{Binding Lang.LBA_InitialValue}"  VerticalAlignment="Center" HorizontalAlignment="Left"  />
                        <TextBox Grid.Row="0" Grid.Column="1"  Name="txt_initialValue" Text="{Binding Enumerator}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="26" />
                        <Label Grid.Row="1" Grid.Column="0"  Content="{Binding Lang.LBA_Increment}"  VerticalAlignment="Center" HorizontalAlignment="Left"  />
                        <TextBox  Grid.Row="1" Grid.Column="1" Name="txt_increment" Text="{Binding EnumeratorIncrement}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="26" />
                        <Label Grid.Row="2" Grid.Column="0"  Content="{Binding Lang.LBA_Mask}" HorizontalAlignment="Left"  VerticalAlignment="Center"  />
                        <TextBox Grid.Row="2" Grid.Column="1"  Name="txt_mask" Text="{Binding Mask}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="32"  />
                    </Grid>

                </Grid>
            </GroupBox>
            <GroupBox Header="{Binding Lang.GBH_Position}" Grid.Column="1" HorizontalAlignment="Left"  Height="146" VerticalAlignment="Top" Margin="5,10,0,0">
                <Grid Margin="2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="26"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>

                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="cb_fitToPage" Content="{Binding Lang.CB_FitToPage,FallbackValue=Ajustar na pagina}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Click="cb_fitToPage_Click" IsChecked="{Binding FitToPage}"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="{Binding Lang.LBA_Left}" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="{Binding Lang.LBA_Top}" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                    <Label Grid.Row="3" Grid.Column="0" Content="{Binding Lang.LBA_Gap}" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding StartX}" VerticalAlignment="Center" Width="26" Name="txt_startX"/>
                    <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding StartY}" VerticalAlignment="Center" Width="26" Name="txt_startY"/>
                    <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Gap}" VerticalAlignment="Center" Width="26" Name="txt_gap"/>

                </Grid>
            </GroupBox>


        </Grid>
        <Grid  Grid.Row="3"  >
            <Button x:Name="btn_process" Content="{Binding Lang.BTN_Process,FallbackValue=Multiplos desenhos}" Click="btn_process_Click" Width="130" Height="34"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,7,0,0"/>
        </Grid>
    </Grid>
</UserControl>
